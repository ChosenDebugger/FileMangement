<Window x:Class="FileMangement.FileAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMangement"
        mc:Ignorable="d"
        Title="FileAddWindow" Height="450" Width="398">
    <Grid HorizontalAlignment="Left" Margin="0,0,0,-0.333" Width="388">

        <TextBox Name="NewFileName_Text" HorizontalAlignment="Left" Height="35" Margin="71,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" FontSize="22"/>
        <Label Content="文件名：" HorizontalAlignment="Left" Margin="71,36,0,0" VerticalAlignment="Top" Height="36" Width="194" FontSize="20"/>

        <TextBox Name="NewFileContent_Text" HorizontalAlignment="Left" Height="131" Margin="71,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" FontSize="22"/>
        <Label Content="请输入文件内容：" HorizontalAlignment="Left" Margin="71,126,0,0" VerticalAlignment="Top" Height="36" Width="194" FontSize="20"/>

        <Button Name="Confirm_Button" Content="确认" HorizontalAlignment="Left" Margin="71,345,0,0" VerticalAlignment="Top" Width="251" Height="41" Click="Confirm_Button_Click"/>
    </Grid>
</Window>

