<Window x:Class="FileMangement.NewFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMangement"
        mc:Ignorable="d"
        Title="NewFolderWindow" Height="450" Width="800">

    <Grid>
        <TextBox x:Name="NewFolderName_Text" HorizontalAlignment="Left" Height="35" Margin="84,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" FontSize="22" TextChanged="NewFolderName_Text_TextChanged"/>
        <Label Content="请输入文件夹名：" HorizontalAlignment="Left" Margin="84,87,0,0" VerticalAlignment="Top" Height="36" Width="194" FontSize="20"/>
        <Button Content="确认" HorizontalAlignment="Left" Margin="84,253,0,0" VerticalAlignment="Top" Width="144" Height="44" Click="Button_Click"/>
    </Grid>

</Window>
